<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:grid="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="60dp"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/player_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cross"
                android:textSize="@dimen/screen_font_size"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/fontColor"
                android:background="@color/gridColor">

        </TextView>
        <ImageView
                android:id="@+id/display_image"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>



    <android.support.v7.widget.GridLayout
            android:id="@+id/board_grid"
            grid:columnCount="4"
            grid:rowCount="4"
            android:layout_marginTop="200dp"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/grid">

        <ImageView
                android:id="@+id/cell_0"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                grid:layout_columnSpan="1"
                grid:layout_rowSpan="1"
                grid:layout_row="0"
                grid:layout_column="0"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:tag="0"/>
        <ImageView
                android:id="@+id/cell_1"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                grid:layout_row="0"
                grid:layout_column="1"
                android:tag="1"/>

        <ImageView
                android:id="@+id/cell_2"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                grid:layout_row="0"
                grid:layout_column="2"
                android:tag="2"/>

        <ImageView
                android:id="@+id/cell_3"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                grid:layout_row="0"
                grid:layout_column="3"
                android:tag="3"/>

        <ImageView
                android:id="@+id/cell_4"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                grid:layout_row="1"
                grid:layout_column="0"
                android:tag="4"/>

        <ImageView
                android:id="@+id/cell_5"

                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="1"
                grid:layout_column="1"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="5"/>

        <ImageView
                android:id="@+id/cell_6"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="1"
                grid:layout_column="2"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="6"/>

        <ImageView
                android:id="@+id/cell_7"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="1"
                grid:layout_column="3"
                grid:layout_columnSpan="1"
                grid:layout_rowSpan="1"
                android:tag="7"/>

        <ImageView
                android:id="@+id/cell_8"
                android:background="@color/gridColor"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="2"
                grid:layout_column="0"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="8"/>
        <ImageView
                android:id="@+id/cell_9"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gridColor"
                grid:layout_row="2"
                grid:layout_column="1"
                grid:layout_columnSpan="1"
                grid:layout_rowSpan="1"
                android:tag="9"/>
        <ImageView
                android:id="@+id/cell_10"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="2"
                grid:layout_column="2"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="10"/>
        <ImageView
                android:id="@+id/cell_11"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="2"
                grid:layout_column="3"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="11"/>
        <ImageView
                android:id="@+id/cell_12"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="3"
                grid:layout_column="0"
                grid:layout_columnSpan="1"
                grid:layout_rowSpan="1"
                android:tag="12"/>
        <ImageView
                android:id="@+id/cell_13"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="3"
                grid:layout_column="1"
                grid:layout_columnSpan="1"
                grid:layout_rowSpan="1"
                android:tag="13"/>
        <ImageView
                android:id="@+id/cell_14"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="3"
                grid:layout_column="2"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="14"/>
        <ImageView
                android:id="@+id/cell_15"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                grid:layout_row="3"
                grid:layout_column="3"
                grid:layout_rowSpan="1"
                grid:layout_columnSpan="1"
                android:tag="15"/>

    </android.support.v7.widget.GridLayout>


    <Button
            android:id="@+id/new_game_button"
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingBottom="3dp"
            android:layout_marginBottom="20dp"/>

</RelativeLayout>